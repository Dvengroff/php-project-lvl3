{
    "name": "dvengroff/php-project-lvl3",
    "type": "project",
    "authors": [
        {
            "name": "Dmitry Grebenschikov",
            "email": "dvengroff@gmail.com"
        }
    ],
    "description": "Webpage Analyzer. 3rd project of PHP-profession on Hexlet (via Lumen Framework)",
    "keywords": ["analyzer", "web", "php", "project", "hexlet", "lumen", "heroku"],
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "doctrine/dbal": "^2.9",
        "guzzlehttp/guzzle": "^6.3",
        "laravel/lumen-framework": "^6.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.2",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ],
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "phpcs": "phpcs",
        "phpunit": "phpunit"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
